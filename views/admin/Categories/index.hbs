<h1>Create Categories</h1>
<div class="row">
    <div class="col-sm-4">
        <form action="/admin/category/create" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" placeholder="Enter title" name="name" class="form-control">
                <input type="submit" class="btn btn-primary">
            </div>
        </form>
    </div>


</div>
<h1>Categories</h1>
<div class="row">

    <div class="col-sm-8">
        <table class="table">
            <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>
            {{#each categories}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>
                    <a href="/admin/category/edit/{{id}}" class="btn btn-info">Edit</a>
                </td>
                <td>
                    <form action="/admin/category/delete/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>